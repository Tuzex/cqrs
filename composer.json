{
  "name": "tuzex/cqrs",
  "description": "Implementation of CQRS (Command Query Responsibility Segregation) based on the Symfony Messenger",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Edo Barnas",
      "email": "iam@edobarnas.com"
    }
  ],
  "config": {
    "sort-packages": true
  },
  "autoload": {
    "psr-4": {
      "Tuzex\\Cqrs\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tuzex\\Cqrs\\Test\\": "tests"
    }
  },
  "require": {
    "php": "^7.4",
    "symfony/messenger": "4.3.*|4.4.*|5.*"
  },
  "require-dev": {
    "phpstan/phpstan": "0.12.*",
    "phpstan/phpstan-phpunit": "0.12.*",
    "phpunit/phpunit": "9.4.*",
    "symplify/easy-coding-standard": "8.3.*"
  }
}
